            <div class="container">
              <div class="row">
            <div class="col">
                <h2>Recent Notes</h2>
                <% @activities.each do |activity| %>
  	              <div class="text-center" id="rendered_activity">
		              <%# render_activity(activity, :layout => "layouts/activity_wrapper") %> 
                   <%= render_activity activity %>

  	              </div>
                <%end%>
            </div>

            <div class="col">
              <h2>My Courses</h2>

              <% if (current_user.courses.size == 0) %>
  	           No courses!
              <% else %>
                <table class="table table-light">
                <thead class="thead-dark">
                <tr>
                  <th scope="col">Course Code</th>
                  <th colspan="2" scope="colgroup">School</th>
                </tr>
                </thead>
                <tbody>
                  <% current_user.courses.each do |course| %>
                    <tr scope="row">
                      <td><%= link_to course.course_code, course_path(course) %></td>
                      <td><%= course.school.school_name %></td>
                      <td><%= link_to "Remove Course", user_path(current_user, rm_course: course.id), method: :patch%> </td>
                    </tr>
                    <% end %>
                </tbody>
                </table>
               
              <%= link_to '<button type="button" class="btn btn-light">Add courses</button>'.html_safe, schools_path() %> 
              </div> 
              </div>
              </div>         
  <% end %>
</div>
  

<% end %>
  <% if @msg != "" %>
    <p><strong> <%= @msg %> </strong></p>
  <% end %>
</div>
    </div>
