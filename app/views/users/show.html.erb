<h1> User Profile </h1>

<table>
  <tr>
    <th>First Name</th>
    <th><%= @user.first_name %></th>
  </tr>
  <tr>
    <th>Last Name</th>
    <th><%= @user.last_name %></th>
  </tr>
  <tr>
    <th>Email</th>
    <th><%= @user.email %></th>
  </tr>
</table>

<%= link_to 'Edit profile', edit_user_path %>
<br>
<%= link_to 'Change email or password', edit_user_registration_path %>

<h2> Courses </h2>

<table>
  <tr>
    <th>Course Code</th>
    <th>School</th>
  </tr>
  <% @user.courses.each do |course| %>
    <tr>
      <td><%= link_to course.course_code, course_path(course) %></td>
      <td><%= course.school.school_name %></td>
    </tr>
  <% end %>
</table>